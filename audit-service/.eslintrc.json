{
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "codeFrame": false
  },
  "extends": "airbnb",
  "rules": {
    "strict": 0,
    "comma-dangle": 0,
    "no-console": "off",
    "arrow-body-style": 0,
    "function-paren-newline": "off",
    "no-underscore-dangle": "off",
    "max-len": [1, 120, 4]
  },
  "plugins": [
    "import"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "SERVICE_URL": true,
    "WEBAPP_URL": true,
    "VERSION": true,
    "ENV": true,
    "PLATFORM_NAME": true,
    "CDN_URL": true,
    "LOADER_URL": true
  }
}
